.panel.panel-default
  .panel-heading
    h3.title-gray-heading
      span.glyphicon.glyphicon-list
      | &nbsp; Item Subcategories List
      = link_to "Create", new_api_sub_category_path, class: "btn btn-primary pull-right"
  .panel-body
    br
    table.table.table-hover.table-striped
      thead
        tr
          th Name
          th Item Category
          th Action
      tbody
        - @sub_categories.each do |sub_category|
          tr
            td= sub_category.name
            td= sub_category.category.name
            td
              = link_to icon_text('pencil', ''), edit_api_sub_category_path(sub_category), title: 'View', class: 'btn btn-xs btn-warning'
              | &nbsp;
              = link_to icon_text('trash', ''), api_sub_category_path(sub_category), method: :delete, 'data-confirm' => 'Are you sure you want to delete this record?', class: 'btn btn-xs btn-danger'," data-toggle"=> "tooltip", "data-placement" => "top", "title" => "Delete"

