.panel.panel-default
  .panel-heading
    h3
      span.glyphicon.glyphicon-list
      | Item Service List
      = link_to "Create", new_api_service_path, class: "btn btn-primary pull-right"
  .panel-body
    br
    table.table.table-hover.table-striped
      thead
        tr
          th Name
          th Action
      tbody
        - @services.each do |serv|
          tr
            td= serv.name
            td
              = link_to icon_text('pencil', ''), edit_api_service_path(serv), title: 'View', class: 'btn btn-xs btn-warning'
              | &nbsp;
              = link_to icon_text('trash', ''), api_service_path(serv), method: :delete, 'data-confirm' => 'Are you sure you want to delete this record?', class: 'btn btn-xs btn-danger'," data-toggle"=> "tooltip", "data-placement" => "top", "title" => "Delete"

