= form_for [:api, @vessel], html: { class: '' } do |f| 
  br
  .row
    .col-xs-4
      label Vessel Type
      = f.select :vessel_type_id, VesselType.all.map{ |e| [e.name, e.id] }, {include_blank: true },  class: 'form-control', required: "required"
    .col-xs-4
      label Vessel Name
      = f.text_field :name, class: 'form-control', required: "required"
    .col-xs-4
      label Flag Of Registry
      = f.text_field :flag_of_registry, class: 'form-control', required: "required"
  br
  .row
    .col-xs-4
      label Owner/Operator
      = f.text_field :owner_operator, class: 'form-control', required: "required"
    .col-xs-4
      label GRT
      = f.number_field :grt, class: 'form-control', required: "required" 
    .col-xs-4
      label NRT
      = f.number_field :nrt, class: 'form-control', required: "required"
  br
  .row
    .col-xs-4
      label DWT
      = f.number_field :dwt, class: 'form-control', required: "required"
    .col-xs-4
      label LOA
      = f.number_field :loa, class: 'form-control', required: "required"
    .col-xs-4
      label Service Speed
      = f.number_field :service_speed, class: 'form-control', required: "required"
  br
  .row
    .col-xs-4
      label Conference
      = f.number_field :conference, class: 'form-control', required: "required"
    .col-xs-4
      label Type Of Service
      = f.text_field :type_of_service, class: 'form-control', required: "required"
    .col-xs-4
      label Number of Booms
      = f.number_field :num_of_booms, class: 'form-control', required: "required"  
  br
  .row
    .col-xs-4
      label Capacity/Boom
      = f.number_field :capacity_boom, class: 'form-control', required: "required"
    .col-xs-4
      label Type Of Boom
      = f.text_field :type_of_boom, class: 'form-control', required: "required"
    .col-xs-4
      label Number Of Hatches
      = f.number_field :num_of_hatches, class: 'form-control', required: "required" 
  br
  .row
    .col-xs-4
      label Type Of Hatch
      = f.text_field :type_of_hatch, class: 'form-control', required: "required"
    .col-xs-4
      label Boom Cycle
      = f.number_field :boom_cycle, class: 'form-control', required: "required"
    .col-xs-4
      label Custom Reg Number
      = f.number_field :customs_reg_number, class: 'form-control', required: "required" 
  br
  .row
    .col-xs-4
      label Voyage Number
      = f.number_field :voyage_num, class: 'form-control', required: "required"
  br
  br
  input.btn.btn-primary type="submit" value="Save"
  | &nbsp;  
  = link_to 'Cancel', request.referer, class: 'btn btn-warning'
